{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src_api"
            },
            // "justMyCode": true
        },
        {
            "name": "Python Debugger: serve_k4",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src_api/serve_k4.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src_api"
            },
            // if true vscode remains in your src files when stepping. no jumping to stdlib or other packages
            "justMyCode": true
        }
    ]
}